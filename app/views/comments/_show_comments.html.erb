<h3>Komentarze</h3>
<% if @user.comments.present? %>
  <ul>
    <% @comments.each do |comment| %>
      <li>
        <%= link_to comment.user, comment.user %> napisa≈Ç: "<%= comment.body %>"
        <% if current_user.to_s == @user.login.to_s %>
						<%= link_to "Usun", '/comments/delete/'+comment.id.to_s %>
			  <% end %>
      </li>
    <% end %>
  </ul>
<% else %>
	<p>Brak komentarzy!</p>
<% end %>
