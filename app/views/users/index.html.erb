<% title "Users" %>

<table>
  <% for user in @users %>
    <tr>
      <td><%= user.login %></td>
      <td><%= user.email %></td>
      <td><%= link_to "Show", user %></td>
      <td><%= link_to "Edit", edit_user_path(user) %></td>
      <td><%= link_to "Destroy", user, :confirm => 'Are you sure?', :method => :delete %></td>
    </tr>
  <% end %>
</table>
<% unless current_user.present? %>
  <p><%= link_to("New user", new_user_path) %> - <%= link_to("Log in", new_user_session_path) %></p>
<% end %>
